require('trouble').setup!

vimp = require('vimp')

macro cmd = (...) -> "'<cmd>#{...}<CR>'"

vimp.nnoremap('<leader>xx', $cmd TroubleToggle)

vimp.nnoremap('<leader>xw', $cmd TroubleToggle workspace_diagnostics)
vimp.nnoremap('<leader>xd', $cmd TroubleToggle document_diagnostics)
vimp.nnoremap('<leader>xq', $cmd TroubleToggle quickfix)
vimp.nnoremap('<leader>xl', $cmd TroubleToggle loclist)

true
