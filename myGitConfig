#[user]
    #name = Adam Lesperance
    #email = lespea@gmail.com

[alias]
    aa  = add -A
    ca  = commit -a
    co  = checkout
    st  = status
    gca = gc --aggressive

[apply]
    whitespace = strip

[color]
    grep        = always
    diff        = always
    interactive = always
    pager       = true
    status      = true
    ui          = always

[interactive]
    diffFilter = delta --color-only

[core]
    editor = vim
    pager  = delta

[delta]
    syntax-theme = Monokai Extended
    line-numbers = true

[diff]
    rename = copy
    colorMoved = default

[merge]
    conflictstyle = diff3

[core]
    autocrlf = false

[push]
    default = simple

[cola]
    spellcheck = false
    fontdiff = Cascadia Code,12,-1,5,50,0,0,0,0,0

[filter "lfs"]
    process = git-lfs filter-process
    required = true
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f

[url "ssh://git@github.com/"]
    insteadOf = https://github.com/

[pull]
    rebase = false

[filter "cleanFishVars"]
    clean = awk '!/SETUVAR _.*/{print}'
[diff "fish_variables"]
    textconv = awk '!/SETUVAR _.*/{print}'
